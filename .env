# ════════════════════════════════════════════════════════════════════════
#  FundChamps — Example Environment File
#  Copy to `.env` and override per environment (dev, staging, prod)
# ════════════════════════════════════════════════════════════════════════

# ── Flask Core ───────────────────────────────────────────────
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_CONFIG=app.config.DevelopmentConfig
SECRET_KEY=dev_only_CHANGE_ME

HOST=0.0.0.0
PORT=5000

# ── Email (SMTP / SendGrid) ──────────────────────────────────
MAIL_SERVER=localhost
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SUPPRESS_SEND=1
MAIL_DEFAULT_SENDER="FundChamps <noreply@fundchamps.local>"

SENDGRID_USERNAME=
SENDGRID_PASSWORD=

# ── CORS / Origins ───────────────────────────────────────────
CORS_ORIGINS=http://127.0.0.1:5000,http://localhost:5000
PRIMARY_ORIGIN=http://127.0.0.1:5000

# ── Database (SQLite dev default; use Postgres in prod) ───────
DATABASE_URL=sqlite:////app/data/app.db
SQLALCHEMY_ECHO=0

# ── CSRF & Forms ─────────────────────────────────────────────
WTF_CSRF_ENABLED=1
WTF_CSRF_TIME_LIMIT=43200

# ── Stripe / PayPal ──────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_CHANGE_ME
STRIPE_PUBLIC_KEY=pk_test_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME
STRIPE_API_KEY=sk_test_1234567890
DOMAIN=http://127.0.0.1:5000
PLATFORM_FEE_PCT=0.029

PAYPAL_ENV=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_TIMEOUT=15

# ── API / JWT Auth ───────────────────────────────────────────
API_TOKENS=devtoken123
JWT_ALG=HS256
JWT_SECRET=change_me_dev
JWT_PUBLIC_KEY=
API_AUDIENCE=https://fundchamps.api
API_ISSUER=https://auth.local/

# ── Redis / Realtime ─────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
CACHE_TYPE=simple
CACHE_REDIS_URL=
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_MESSAGE_QUEUE=

# ── Logging & Limits ─────────────────────────────────────────
LIMITER_REDIS_URL=memory://
LOG_LEVEL=DEBUG
WERKZEUG_LOG_LEVEL=WARNING

# ── Feature Flags ────────────────────────────────────────────
FEATURE_CONFETTI=1
FEATURE_DARK_MODE=1
FEATURE_AI_THANK_YOU=0
FEATURE_SPONSOR_VIP_QUEUE=1
FEATURE_AUTO_SOCIAL_POST=0
FEATURE_TEAM_THEMES=1
FEATURE_QR_POSTER_GENERATOR=1
FEATURE_EVENT_CALENDAR_SYNC=0
FEATURE_LOCAL_DEALS_NETWORK=0

# ── Sentry / Slack / OpenAI (Optional) ───────────────────────
SENTRY_DSN=
SENTRY_TRACES=0.0
SLACK_WEBHOOK_URL=
OPENAI_API_KEY=

# App
BASE_URL=https://yourdomain.com
DEFAULT_CURRENCY=USD

