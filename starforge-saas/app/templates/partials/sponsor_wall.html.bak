<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sponsor Wall - Connect ATX Elite</title>
  <style>
    @keyframes marquee {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }

    .animate-marquee {
      display: flex;
      animation: marquee 38s linear infinite;
      gap: 2.5rem;
      will-change: transform;
    }

    .shadow-gold-glow { box-shadow: 0 18px 0 #facc15cc, inset 0 2px 8px #fff2; }
    .shadow-gold-aura { box-shadow: 0 38px #fde68a80, inset 0 2px 8px #fff2; }

    @keyframes bounce {
      0% { transform: translateY(0); }
      100% { transform: translateY(-7px); }
    }

    .animate-bounce { animation: bounce 1.1s infinite alternate; }
  </style>
</head>

<body class="bg-zinc-950">
  <section class="py-14 bg-gradient-to-b from-black via-secondary to-black/90 rounded-2xl shadow-gold-glow">
    <div class="container mx-auto max-w-4xl px-4 text-center">
      <h2 class="text-4xl md:text-5xl font-black text-yellow-400 mb-4 animate-shine">
        üèÜ Our Sponsor Wall <span class="text-xl ml-2">2025</span>
      </h2>
      <p class="mb-8 text-lg text-yellow-300">
        <strong class="text-gold">You power the dream.</strong><br>
        Sponsors make Connect ATX Elite a force‚Äîon the court and in our community.<br>
        Want your name here? Step up and join our Champion Circle.
      </p>

      <div class="grid md:grid-cols-3 gap-6">
        {% if sponsors_sorted %}
          {% for sponsor in sponsors_sorted %}
          <div class="bg-zinc-900 rounded-2xl shadow-gold-glow p-6 hover:scale-105 transition-transform duration-300 relative group">
            <a href="{{ sponsor.url }}" target="_blank" rel="noopener sponsored">
              <img
                src="{% if sponsor.logo.startswith('http') %}{{ sponsor.logo }}{% else %}{{ url_for('static', filename='images/sponsors/' ~ (sponsor.logo or 'logo.webp')) }}{% endif %}"
                alt="{{ sponsor.name }} logo"
                class="w-16 h-16 mx-auto rounded-full border-4 border-yellow-400 grayscale group-hover:grayscale-0 transition"
                loading="lazy">
            </a>
            <div class="mt-3 font-extrabold text-yellow-200">
              <a href="{{ sponsor.url }}" class="hover:underline" target="_blank">{{ sponsor.name }}</a>
            </div>
            <div class="text-yellow-300 font-mono">
              ${{ '{:,.0f}'.format(sponsor.amount) }}
            </div>
            {% if sponsor.tier %}
              <div class="mt-2">
                <span class="inline-flex items-center px-3 py-1 rounded-full bg-yellow-400 text-black font-bold animate-bounce">
                  {{ sponsor.tier }} Sponsor
                </span>
              </div>
            {% endif %}
          </div>
          {% endfor %}
        {% else %}
          <div class="col-span-full py-8">
            <button onclick="openSponsorModal()" class="px-8 py-3 bg-yellow-400 text-black rounded-full hover:bg-yellow-300 transition">
              üåü Be our FIRST sponsor ‚Äî Founding status!
            </button>
          </div>
        {% endif %}
      </div>

      <button id="sponsor-btn" onclick="openSponsorModal()" class="mt-10 px-8 py-3 bg-yellow-400 rounded-full shadow-lg hover:bg-yellow-300 transition">
        ‚ú® Become a Sponsor
      </button>

      <img src="{{ url_for('static', filename='images/TeamRings.webp') }}" alt="Championship Rings" class="mt-6 rounded-2xl shadow-2xl border-4 border-yellow-400 max-w-xs mx-auto">
      <p class="mt-2 text-yellow-300">Champions Inspire Champions</p>
    </div>
  </section>

  <script type="module">
    import confetti from "https://cdn.skypack.dev/canvas-confetti@1.6.0";

    window.openSponsorModal = () => {
      const modal = document.getElementById("become-sponsor-modal");
      modal.classList.add("show");
      modal.style.opacity = "1";
      modal.style.pointerEvents = "all";
      confetti({ particleCount: 90, spread: 70, origin: { y: 0.7 }, colors: ["#facc15", "#fde68a"] });
    };

    document.getElementById('sponsor-btn').addEventListener("click", openSponsorModal);

    window.sponsorImpression = (id, type = "view") => {
      new Image().src = `/analytics/pixel?sponsor_id=${id}&event=${type}&ts=${Date.now()}`;
    };

    window.sponsorClick = (id) => window.sponsorImpression(id, "click");
  </script>
</body>

</html>

