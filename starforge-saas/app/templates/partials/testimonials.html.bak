{% for t in testimonials %}
  <blockquote
    class="testimonial p-6 rounded-xl shadow-lg bg-white"
    {% if loop.index > 1 %}
      data-aos="fade-up"
      data-aos-delay="{{ loop.index0 * 100 }}"
    {% endif %}
    role="listitem"
    tabindex="0"
    aria-label="{{ t.author }} testimonial"
  >
    <p class="text-lg font-medium text-gray-700">{{ t.quote }}</p>
    <footer class="mt-4 text-base font-semibold text-gray-900">â€” {{ t.author }}</footer>
  </blockquote>
{% endfor %}
