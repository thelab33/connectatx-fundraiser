{
  "name": "connect-atx-elite",
  "private": true,
  "scripts": {
    "dev:css": "tailwindcss -c tailwind.config.js -i ./app/static/css/globals.css -o ./app/static/css/tailwind.min.css --watch",
    "build:css": "postcss ./app/static/css/globals.css -o ./app/static/css/tailwind.min.css --env production",
    "dev:js": "esbuild ./app/static/js/main.js --bundle --sourcemap --outfile=./app/static/js/bundle.min.js --watch",
    "build:js": "esbuild ./app/static/js/main.js --bundle --minify --outfile=./app/static/js/bundle.min.js",
    "dev": "npm-run-all -p dev:css dev:js",
    "build": "npm run build:css && npm run build:js",
    "format": "prettier --write \"app/static/js/**/*.js\" \"app/static/css/**/*.css\"",
    "lint:js": "eslint app/static/js --ext .js",
    "lint:css": "stylelint \"app/static/css/**/*.css\"",
    "check": "npm run lint:js && npm run lint:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.1",
    "stylelint": "^15.11.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3"
  }
}
