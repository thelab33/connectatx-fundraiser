{
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "css:dev": "postcss app/static/css/src/input.css -o app/static/css/tailwind.min.css --watch",
    "css:build": "postcss app/static/css/src/input.css -o app/static/css/tailwind.min.css --env production",
    "serve:flask": "cross-env FLASK_APP=app:create_app FLASK_ENV=development flask run --reload",
    "dev": "npm-run-all --parallel css:dev serve:flask",
    "build": "npm run css:build"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.15",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "3.4.17"
  }
}
