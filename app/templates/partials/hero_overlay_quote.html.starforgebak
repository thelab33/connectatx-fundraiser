{% extends 'base.html' %}
{# ────────────────────── Elite Overlay Quote Partial ────────────────────── #}
{% set team = team if team is defined else {"team_name": "Connect ATX Elite"} %}
{% set quote = team.hero_quote if team and team.hero_quote else "The brotherhood and discipline we build here creates leaders for life." %}
{% set author = team.hero_quote_author if team and team.hero_quote_author else "Coach Angel Rodriguez" %}
{% set author_url = team.hero_quote_author_url if team and team.hero_quote_author_url else "https://connectatxelite.com/coach" %}

<figure
  id="hero-overlay-quote"
  class="absolute bottom-24 md:bottom-28 left-1/2 -translate-x-1/2 z-10 w-[92%] max-w-2xl px-4 rounded-2xl bg-black/80 border border-yellow-400/80 backdrop-blur-lg shadow-xl animate-fade-in animate-delay-700 transition-transform duration-500 hover:scale-105"
  style="box-shadow:0 8px 32px rgba(250,204,21,0.12),0 2px 12px rgba(0,0,0,0.2);"
  itemscope itemtype="https://schema.org/Quotation"
>
  <blockquote class="relative text-white text-lg sm:text-xl font-semibold italic leading-relaxed drop-shadow-[0_2px_12px_rgba(0,0,0,.32)] px-2 md:px-8 py-5"
    cite="{{ author_url }}"
    itemprop="text"
  >
    <!-- Opening quote -->
    <svg class="absolute -left-2 -top-3 w-8 h-8 text-yellow-400 opacity-80 select-none" fill="currentColor" viewBox="0 0 32 32" >
      <path d="M12 20a8 8 0 0 1 8-8V6A14 14 0 0 0 6 20v2a4 4 0 0 0 4 4h2a4 4 0 0 0 4-4z" />
    </svg>
    <span class="block" style="text-shadow: 0 2px 12px rgba(0,0,0,0.32)">
      “{{ quote }}”
    </span>
    <!-- Closing quote -->
    <svg class="absolute -right-2 -bottom-3 w-8 h-8 text-yellow-400 opacity-80 select-none rotate-180" fill="currentColor" viewBox="0 0 32 32" >
      <path d="M12 20a8 8 0 0 1 8-8V6A14 14 0 0 0 6 20v2a4 4 0 0 0 4 4h2a4 4 0 0 0 4-4z" />
    </svg>
  </blockquote>

  <figcaption class="mt-2 text-yellow-300 font-bold tracking-wide text-base flex items-center justify-center gap-1 animate-slide-up animate-delay-900"
    itemprop="author" itemscope itemtype="https://schema.org/Person"
  >
    <span class="text-yellow-400" itemprop="name">— {{ author }}</span>
    <svg class="w-5 h-5 text-yellow-400 animate-bounce" viewBox="0 0 20 20" fill="currentColor" >
      <circle cx="10" cy="10" r="8" />
    </svg>
  </figcaption>

  <button
    type="button"
    class="mt-2 ml-2 text-xs text-yellow-400 hover:text-yellow-300 bg-yellow-400/10 rounded px-2 py-1 transition"
    onclick="navigator.clipboard.writeText(`{{ quote|e }}`); this.innerText='Copied!'; setTimeout(()=>this.innerText='Copy Quote',1000);"
    aria-label="Copy quote to clipboard"
  >
    Copy Quote
  </button>
</figure>

