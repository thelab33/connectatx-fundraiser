    .neo-hero {
      min-height: 340px;
      position: relative;
      border-top-left-radius: 2rem;
      border-top-right-radius: 2rem;
      overflow: hidden;
      background: linear-gradient(120deg,#141f63 0%,#35b5e9 70%,#facc15 100%);
    }
    .feature-tiles-wrap {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2.2rem;
      margin-top: 0;
      position: relative;
      z-index: 10;
    }
    @media (min-width: 700px) {
      .feature-tiles-wrap { grid-template-columns: repeat(2, 1fr); }
    }
    @media (min-width: 1024px) {
      .feature-tiles-wrap { grid-template-columns: repeat(3, 1fr); gap: 2.4rem; }
    }
    .feature-tile {
      background: #181922;
      border-radius: 1.5rem;
      box-shadow: 0 10px 38px #0004, 0 2px 8px #facc1530;
      padding: 2.2rem 1.4rem 2.1rem 1.4rem;
      min-height: 330px;
      display: flex;
      flex-direction: column;
      align-items: stretch;
      justify-content: flex-start;
      transition: box-shadow 0.18s, transform 0.14s;
      position: relative;
      height: 100%;
    }
    .feature-tile:hover {
      box-shadow: 0 18px 54px #facc1522, 0 6px 20px #0008;
      transform: translateY(-5px) scale(1.025);
    }
    .feature-tile> * { flex: 1 1 auto; }
  </style>
