      if (holo){
        const plate = Math.min(0.85, 0.55 + tint * 0.9);
        const stroke = Math.min(1.4, 0.6 + tint * 1.2);
        holo.style.setProperty('--holo-plate', plate.toFixed(2));
        holo.style.setProperty('--holo-stroke', stroke.toFixed(2));
      }
    }catch{}
  };

