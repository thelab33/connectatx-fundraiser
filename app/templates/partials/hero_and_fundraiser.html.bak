    const onMove = (e) => {
      const r = root.getBoundingClientRect();
      const cx = (e.clientX || (e.touches?.[0]?.clientX ?? r.left + r.width/2)) - r.left;
      const cy = (e.clientY || (e.touches?.[0]?.clientY ?? r.top + r.height/2)) - r.top;
