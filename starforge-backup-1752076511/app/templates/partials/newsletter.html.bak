    <style>
      #newsletter-popup {
        display: none;
        position: fixed;
        inset: 0;
        z-index: 12000;
        background: rgba(8, 8, 8, 0.66);
        align-items: center;
        justify-content: center;
        transition: opacity 0.25s;
      }
      #newsletter-popup.visible {
        display: flex;
        opacity: 1;
      }

      #newsletter-content {
        background: #18181b;
        color: #fef3c7;
        border-radius: 1.5rem;
        max-width: 98vw;
        width: 380px;
        padding: 2.5rem 1.8rem 2.1rem;
        box-shadow:
          0 6px 32px #facc1555,
          0 1.5px 12px #0008;
        font-family: "Geist", sans-serif;
        text-align: center;
        animation: popIn 0.6s cubic-bezier(0.4, 2, 0.2, 1);
        outline: none;
        position: relative;
      }
      @keyframes popIn {
        0% {
          transform: scale(0.86) translateY(60px);
          opacity: 0.7;
        }
        100% {
          transform: none;
          opacity: 1;
        }
      }
      #newsletter-close {
        position: absolute;
        top: 1rem;
        right: 1.1rem;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 2rem;
        line-height: 1;
        color: #fde047;
        transition: color 0.2s;
      }
      #newsletter-close:hover {
        color: #fffde4;
      }

      /* form controls */
      #newsletter-popup input[type="email"] {
        width: 90%;
        margin: 1.1rem 0 0.7rem;
        padding: 0.8rem;
        font-size: 1.08rem;
        outline: none;
        border-radius: 999px;
