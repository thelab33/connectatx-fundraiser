{% extends "base.html" %}
{% set NONCE = NONCE if NONCE is defined else (csp_nonce if csp_nonce is defined else '') %}

{% block title %}Admin | {{ super() }}{% endblock %}

{% block hero %}
<!-- Optional Admin Hero -->
{% endblock %}

{% block content %}
<div class="mx-auto w-full max-w-7xl flex-1 p-6">

  {# â”€â”€â”€ Flash Messages â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ #}
  {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
      <ul class="mb-6 space-y-2" role="alert" aria-live="polite">
        {% for category, msg in messages %}
          <li
            class="animate-pulse rounded-lg px-4 py-2 font-bold shadow 
            {% if category in ['success','ok'] %}bg-green-200 text-green-900
            {% elif category in ['error','danger'] %}bg-red-200 text-red-900
            {% elif category == 'warning' %}bg-yellow-200 text-yellow-900
            {% else %}bg-yellow-100 text-zinc-900{% endif %}"
          >
            {{ msg }}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endwith %}

  {# â”€â”€â”€ Admin Content Block (child templates fill this) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ #}
  {% block admin_content %}{% endblock %}

</div>
{% endblock %}

{% block footer %}
<footer class="border-t border-gold/10 mt-10 py-8 text-center text-xs text-zinc-500">
  <div class="mb-1">
    Built with <span class="animate-sparkle">ðŸ’›</span> by
    <b class="text-gold">Angel Rodriguez Jr</b>
    for the <span class="text-gold">Connect ATX Elite</span> / Starforge Team.
  </div>
  <div class="text-[10px] tracking-wide opacity-80">
    FundChamps Admin â€” Championship Protocol &copy; {{ now().year }}
  </div>
</footer>
{% endblock %}

{% block pre_scripts %}
<!-- Admin-specific head scripts (optional) -->
{% endblock %}

{% block post_scripts %}
<!-- Admin-specific JS here -->
{% endblock %}
