<style>
/* SaaS Pro Section Polish */
.fcx-section, .fcx-section--hero, .fcx-section--tiers {
  max-width: 1100px;
  margin-inline: auto;
  margin-bottom: 3rem;
  padding-inline: clamp(14px, 5vw, 36px);
}
</style>
{# About (Sheet) ‚Äî Agency Elite stub #}
{% include "partials/_nonce.html" %}
{% set NONCE = NONCE if NONCE is defined else (csp_nonce if csp_nonce is defined else '') %}
{% macro nonce_attr() -%}{% if NONCE %}nonce="{{ NONCE }}"{% endif %}{%- endmacro %}

{% set TEAM = team or {} %}
{% set TEAM_NAME = TEAM.team_name or TEAM.name or 'Your Club/Org' %}
{% set ABOUT_HTML = TEAM.about_html or None %}
{% set COACHES = TEAM.coaches or [
  {'name':'Coach Taylor','role':'Head Coach','photo': None},
  {'name':'J. Daniels','role':'Assistant Coach','photo': None},
  {'name':'A. Smith','role':'Academic Lead','photo': None},
] %}

<div data-sheet-root class="sheet-page about-sheet">
  <header class="head">
    <span class="chip">{{ TEAM_NAME }}</span>
    <h2 class="title"><span>About</span> <span class="accent">the Club.</span></h2>
    <p class="deck">We build confident student-athletes through competition, community, and character.</p>
  </header>

  <section class="story" aria-label="Club story">
    {% if ABOUT_HTML %}
      <div class="prose">{{ ABOUT_HTML|safe }}</div>
    {% else %}
      <p>Founded to keep opportunity within reach, {{ TEAM_NAME }} provides quality coaching, travel experiences, and academic support. We believe access to sport‚Äîand the structure around it‚Äîmoves kids forward on the court and in life.</p>
      <p>With community partners, we fund gear, travel, and tutoring so families can focus on growth, not costs.</p>
    {% endif %}
  </section>

  <section class="values" aria-label="What we value">
    <h3 class="subhead">Our pillars</h3>
    <ul class="bullets">
      <li>üèÖ <b>Excellence</b> ‚Äî compete with intent and respect.</li>
      <li>üß† <b>Academics</b> ‚Äî classroom comes first.</li>
      <li>ü§ù <b>Community</b> ‚Äî win the day together.</li>
      <li>üíõ <b>Character</b> ‚Äî integrity on and off the floor.</li>
    </ul>
  </section>

  <section class="staff" aria-labelledby="staff-title">
    <h3 id="staff-title" class="subhead">Coaches & Staff</h3>
    <ul class="people">
      {% for c in COACHES %}
      <li class="p">
        <span class="ph" aria-hidden="true">
          {% if c.photo %}
            <img src="{{ c.photo }}" alt="" loading="lazy" decoding="async">
          {% else %}
            <span class="avatar">{{ (c.name or 'C')[0] }}</span>
          {% endif %}
        </span>
        <div class="meta">
          <b class="name">{{ c.name }}</b>
          <span class="role">{{ c.role }}</span>
        </div>
      </li>
      {% endfor %}
    </ul>
  </section>

  <footer class="foot">
    <a class="btn btn--gold" href="{{ HREF_DONATE or url_for('main.donate') if (HREF_DONATE is not defined and url_for is defined and has_endpoint is defined and has_endpoint('main.donate')) else (HREF_DONATE or '/donate') }}" target="_blank" rel="noopener">Donate</a>
    <a class="btn btn--ghost" href="{{ (url_for('main.about') if (url_for is defined and has_endpoint is defined and has_endpoint('main.about')) else '/about') }}">Read the full story ‚Üí</a>
  </footer>
</div>

<style {{ nonce_attr() }}>
.sheet-page{ color:#e8ecf6; background: radial-gradient(120% 70% at 50% 0%, #0f1219 0%, #0b0e15 60%); }
.about-sheet{ display:grid; gap:1rem }
.head{ display:grid; gap:.4rem; margin-bottom:.3rem }
.title{ font:1000 1.4rem/1.15 "Poppins",system-ui; color:#fff; letter-spacing:-.01em }
.title .accent{ color:var(--accent, #facc15) }
.deck{ color:#cdd6e3; max-width:70ch }

.story{ background:linear-gradient(180deg,#10141d,#0b0e15); border:1px solid #ffffff14; border-radius:14px; padding:.9rem }
.story p{ margin:.35rem 0; color:#d5deea; font:600 .98rem/1.5 "Inter" }
.prose :where(h1,h2,h3){ font-family:"Poppins"; font-weight:900; color:#fff; }
.prose :where(p,li){ color:#d5deea; }

.values .subhead, .staff .subhead{ font:900 .95rem/1.1 "Poppins"; color:#fff; margin:.3rem 0 }
.bullets{ list-style:none; padding:0; margin:0; display:grid; gap:.4rem }
.bullets li{ background:#0f131c; border:1px solid #ffffff14; border-radius:12px; padding:.55rem .7rem; color:#cbd5e1; font:700 .95rem/1.35 "Inter" }
.bullets b{ color:#fff }

.people{ list-style:none; padding:0; margin:0; display:grid; gap:.5rem; grid-template-columns:repeat(2, minmax(0,1fr)); }
.p{ display:grid; grid-template-columns:auto 1fr; gap:.6rem; align-items:center; background:#0f131c; border:1px solid #ffffff14; border-radius:12px; padding:.55rem .7rem }
.ph{ width:42px; height:42px; border-radius:10px; background:#121723; display:grid; place-items:center; overflow:hidden; }
.ph img{ width:100%; height:100%; object-fit:cover }
.avatar{ display:inline-grid; place-items:center; width:100%; height:100%; font:900 .95rem/1 "Poppins"; color:#111; background:#facc15; }
.meta .name{ color:#fff }
.meta .role{ color:#a8b3c7; font:800 .82rem/1 "Inter" }

.foot{ display:flex; gap:.6rem; flex-wrap:wrap; margin-top:.4rem }

@media (max-width:820px){
  .people{ grid-template-columns:1fr; }
}
</style>

