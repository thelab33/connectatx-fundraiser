{# ============================================================================
index.html • Connect ATX Elite x FundChamps — Elite Layout
• ONLY uses: sponsor_leaderboard, hero_and_fundraiser, tiers, impact_lockers_premium, about_section
============================================================================ #}
{% extends "base.html" %}
{% from "partials/_core_helpers.html" import nonce_attr %}

{% set ACCENT = team.theme_color or '#b91c1c' %}
{% set SECONDARY = '#facc15' %}
{% set BG_DARK = '#18181b' %}
{% set BG_MEDIUM = '#232127' %}

{% block title %}{{ fundraiser_title or 'Connect ATX Elite FundChamps' }}{% endblock %}

{% block extra_styles %}
<style {{ nonce_attr(NONCE) }}>
/* Brand backgrounds & accents */
.bg-elite-dark   { background: {{ BG_DARK }}; }
.bg-elite-med    { background: {{ BG_MEDIUM }}; }
.text-elite-gold { color: {{ SECONDARY }}; }

/* Section swoosh divider */
.swoosh-divider {
  background: linear-gradient(135deg, {{ ACCENT }} 50%, transparent 80%);
  clip-path: polygon(0 100%, 100% 80%, 100% 100%, 0 100%);
  height: 54px; width: 100vw; margin-top: -48px;
  z-index: 5; position: relative;
}
@media (max-width: 900px) {
  .swoosh-divider { margin-top: 0; }
}
</style>
{% endblock %}

{% block content %}
<main>
  {% include "partials/sponsor_leaderboard.html" ignore missing with context %}

  <!-- HERO -->
  <section class="relative hero ...">
    {% include "partials/hero_and_fundraiser.html" ignore missing with context %}
    <div class="swoosh-divider"></div>
  </section>

  <!-- TIERS -->
  <section class="relative tiers section-overlap ...">
    <div class="max-w-6xl mx-auto">
      {% include "partials/tiers.html" ignore missing with context %}
    </div>
  </section>

  <!-- IMPACT -->
  <section class="relative impact section-overlap ...">
    <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
      <div>
        {% include "partials/impact_lockers_premium.html" ignore missing with context %}
      </div>
      <div>
        <!-- Add optional testimonials, KPIs, or a CTA here if you want! -->
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section class="relative about section-overlap ...">
    <div class="max-w-5xl mx-auto flex flex-col md:flex-row gap-10 items-center">
      <div class="flex-1">
        {% include "partials/about_section.html" ignore missing with context %}
      </div>
      <!-- Optional: Add another column with sponsors or quotes -->
    </div>
  </section>
</main>
{% endblock %}
